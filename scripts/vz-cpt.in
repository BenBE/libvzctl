#
# Checkpoint a container using CRIU (http://criu.org).
# Useful with recent upstream (i.e. non-OpenVZ) kernels.
# Requires criu to be installed.
#
# Parameters are passed in environment variables.
# Required parameters:
#   VE_ROOT     - container root directory
#   VE_DUMP_DIR - directory for saving dump files
#   VE_PID      - PID of CT init process
exec 1>&2

mkdir -p $VE_DUMP_DIR &&
criu dump	--file-locks								\
		--tcp-established							\
		--evasive-devices							\
		--manage-cgroups							\
		--link-remap								\
		--root $VE_ROOT								\
		--ext-mount-map /sys/fs/cgroup/cpuset:/ve-cpuset			\
		--ext-mount-map /sys/fs/cgroup/cpu,cpuacct:/ve-cpu-cpuacct		\
		--ext-mount-map /sys/fs/cgroup/memory:/ve-memory			\
		--ext-mount-map /sys/fs/cgroup/devices:/ve-devices			\
		--ext-mount-map /sys/fs/cgroup/freezer:/ve-freezer			\
		--ext-mount-map /sys/fs/cgroup/net_cls:/ve-net_cls			\
		--ext-mount-map /sys/fs/cgroup/blkio:/ve-blkio				\
		--ext-mount-map /sys/fs/cgroup/perf_event:/ve-perf_event		\
		--ext-mount-map /sys/fs/cgroup/hugetlb:/ve-hugetlb			\
		--ext-mount-map /sys/fs/cgroup/systemd:/ve-systemd			\
		-t $VE_PID								\
		-D $VE_DUMP_DIR								\
		-o dump.log								\
		-vvvv
if [ $? -ne 0 ]; then
        [ -d $VE_DUMP_DIR.fail ] && rm -rf $VE_DUMP_DIR.fail
        mv -f $VE_DUMP_DIR $VE_DUMP_DIR.fail
        echo Failed to checkpoint the Container
        echo All dump files and logs were saved to $VE_DUMP_DIR.fail
        exit 1
else
        echo Checkpointing finished successfully
fi

